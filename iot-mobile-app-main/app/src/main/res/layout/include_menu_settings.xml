<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="70dp"
        android:paddingBottom="@dimen/spacing_large"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/spacing_large"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:fontFamily="sans-serif-medium"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/action_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_overlay"
                android:paddingHorizontal="@dimen/spacing_middle"
                android:paddingVertical="@dimen/spacing_medium"
                android:text="www.dream-space.web.id"
                android:textColor="@color/grey_10"
                android:textSize="12sp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_getcode"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/spacing_mlarge"
            android:layout_height="50dp"
            android:background="@drawable/btn_rounded_primary"
            android:text="BUY SOURCE CODE"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingVertical="@dimen/spacing_middle">

            <LinearLayout
                android:id="@+id/action_notifications"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_xxlarge"
                android:background="@drawable/button_overlay"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/spacing_mlarge">

                <ImageView
                    android:layout_width="@dimen/spacing_mxlarge"
                    android:layout_height="@dimen/spacing_mxlarge"
                    android:padding="@dimen/spacing_xsmall"
                    android:src="@drawable/ic_notifications_outline"
                    app:tint="@color/grey_20" />

                <View
                    android:layout_width="@dimen/spacing_large"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:textColor="@color/grey_10"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/notif_badge"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/badge_shape"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/action_favorite"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_xxlarge"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/spacing_mlarge">

                <ImageView
                    android:layout_width="@dimen/spacing_mxlarge"
                    android:layout_height="@dimen/spacing_mxlarge"
                    android:padding="@dimen/spacing_xsmall"
                    android:src="@drawable/ic_favorite_border"
                    app:tint="@color/grey_20" />

                <View
                    android:layout_width="@dimen/spacing_large"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorites"
                    android:textColor="@color/grey_10"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/action_portfolio"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_xxlarge"
                android:background="@drawable/button_overlay"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/spacing_mlarge">

                <ImageView
                    android:layout_width="@dimen/spacing_mxlarge"
                    android:layout_height="@dimen/spacing_mxlarge"
                    android:padding="@dimen/spacing_xsmall"
                    android:src="@drawable/ic_apps"
                    app:tint="@color/grey_20" />

                <View
                    android:layout_width="@dimen/spacing_large"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other products"
                    android:textColor="@color/grey_10"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/action_request"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_xxlarge"
                android:background="@drawable/button_overlay"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/spacing_mlarge">

                <ImageView
                    android:layout_width="@dimen/spacing_mxlarge"
                    android:layout_height="@dimen/spacing_mxlarge"
                    android:padding="@dimen/spacing_xsmall"
                    android:rotation="-45"
                    android:src="@drawable/ic_send"
                    app:tint="@color/grey_20" />

                <View
                    android:layout_width="@dimen/spacing_large"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Request design"
                    android:textColor="@color/grey_10"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/action_contact"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_xxlarge"
                android:background="@drawable/button_overlay"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/spacing_mlarge">

                <ImageView
                    android:layout_width="@dimen/spacing_mxlarge"
                    android:layout_height="@dimen/spacing_mxlarge"
                    android:padding="@dimen/spacing_xsmall"
                    android:src="@drawable/ic_support_agent"
                    app:tint="@color/grey_20" />

                <View
                    android:layout_width="@dimen/spacing_large"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact us"
                    android:textColor="@color/grey_10"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/action_hire"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_xxlarge"
                android:background="@drawable/button_overlay"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/spacing_mlarge">

                <ImageView
                    android:layout_width="@dimen/spacing_mxlarge"
                    android:layout_height="@dimen/spacing_mxlarge"
                    android:padding="@dimen/spacing_xsmall"
                    android:src="@drawable/ic_smartphone"
                    app:tint="@color/grey_20" />

                <View
                    android:layout_width="@dimen/spacing_large"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hire us"
                    android:textColor="@color/grey_10"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/action_rate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_xxlarge"
                android:background="@drawable/button_overlay"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/spacing_mlarge">

                <ImageView
                    android:layout_width="@dimen/spacing_mxlarge"
                    android:layout_height="@dimen/spacing_mxlarge"
                    android:padding="@dimen/spacing_xsmall"
                    android:src="@drawable/ic_star_border"
                    app:tint="@color/grey_20" />

                <View
                    android:layout_width="@dimen/spacing_large"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate this app"
                    android:textColor="@color/grey_10"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/action_about"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_xxlarge"
                android:background="@drawable/button_overlay"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/spacing_mlarge">

                <ImageView
                    android:layout_width="@dimen/spacing_mxlarge"
                    android:layout_height="@dimen/spacing_mxlarge"
                    android:padding="@dimen/spacing_xsmall"
                    android:src="@drawable/ic_error_outline"
                    app:tint="@color/grey_20" />

                <View
                    android:layout_width="@dimen/spacing_large"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textColor="@color/grey_10"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="200dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>