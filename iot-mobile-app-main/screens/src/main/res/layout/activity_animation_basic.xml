                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layoutDirection="rtl"
                    android:paddingHorizontal="@dimen/spacing_medium"
                    android:text="Fade Out Right"
                    android:textColor="@color/grey_60"
