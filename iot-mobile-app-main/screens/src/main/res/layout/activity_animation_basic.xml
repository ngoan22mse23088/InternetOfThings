                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layoutDirection="rtl"
                    android:paddingHorizontal="@dimen/spacing_medium"
                    android:text="Bounce In Left"
