                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="@dimen/spacing_middle"
                    android:background="@color/grey_5" />

                <RadioButton
                    android:id="@+id/zoom_out"
